{
    "author": "t0pl",
    "manifest_version": 2,
    "description": "Shorthand to get details about Vimeo video on some webpage",
    "name": "Vimeo details",
    "version": "1.0",
    "background": {
        "scripts": [
            "./src/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "./src/popup.html"
    },
    "icons": {
        "16": "./images/icon16.png",
        "48": "./images/icon48.png",
        "128": "./images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "./src/content.js"
            ]
        }
    ]
}